{
  "name": "orca-test-task",
  "homepage": "http://ViktoryiaYatskova.github.io/task-manager",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start": "craco start",
    "build": "craco build",
    "test": "craco test",
    "coverage": "craco test --coverage --watchAll=false",
    "prepare": "husky install",
    "lint-staged": "lint-staged",
    "prettier": "prettier --write -l 'src/**/*.{js,json}'",
    "eslint": "eslint --cache src",
    "stylelint": "stylelint 'src/**/*.js'",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d build"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^1.6.0",
    "axios": "^0.21.1",
    "connected-react-router": "^6.9.1",
    "faker": "^5.5.3",
    "history": "^4.10.1",
    "prop-types": "^15.7.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-redux": "^7.2.4",
    "react-router-dom": "^5.2.0",
    "react-scripts": "4.0.3",
    "redux-saga": "^1.1.3",
    "styled-components": "^5.3.0",
    "web-vitals": "^1.0.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "@wojtekmaj/enzyme-adapter-react-17": "^0.6.2",
    "craco": "^0.0.3",
    "enzyme": "^3.11.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-react-perf": "^3.3.0",
    "husky": "^6.0.0",
    "jest-environment-enzyme": "^7.1.2",
    "jest-enzyme": "^7.1.2",
    "jest-styled-components": "^7.0.4",
    "lint-staged": "^11.0.0",
    "prettier": "^2.3.1",
    "redux-mock-store": "^1.5.4",
    "redux-saga-test-plan": "^4.0.1",
    "stylelint": "^13.13.1",
    "stylelint-processor-styled-components": "^1.10.0",
    "gh-pages": "^3.2.3"
  },
  "lint-staged": {
    "src/**/*.js": [
      "prettier --write",
      "eslint --cache",
      "stylelint"
    ]
  },
  "jest": {
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "globalSetup": "<rootDir>/src/config/setupTests/globalSetup.js"
  }
}
